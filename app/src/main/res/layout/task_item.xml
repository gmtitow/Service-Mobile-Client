<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@color/mainTheme">

    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_name"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            tools:text = "Сбегать за говядииной"/>

        <ImageView
            android:id="@+id/image_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="end"
            android:gravity="end"
            android:contentDescription="@string/profile_photo"
            android:src="@drawable/ic_check" />

    </LinearLayout>

    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_list_title_style"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:gravity="start"
            android:text="@string/task_category_title" />

        <TextView
            android:id="@+id/text_category"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_list_title_style"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:gravity="start"
            android:text="@string/task_status_title" />

        <TextView
            android:id="@+id/text_status"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tender_date"
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_list_title_style"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:text="@string/tender_duration_title" />

        <TextView
            android:id="@+id/text_tender_duration"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>