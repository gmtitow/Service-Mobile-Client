<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borders_other_message"
        android:padding="8dp">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        style="@style/text_list_style"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="8dp"
        tools:text = "12 июня 2019"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_list_style"
        android:maxWidth="230dp"
        android:layout_gravity="start"
        android:id="@+id/text_message"
        android:ellipsize="end"
        tools:text = "Большой, большой отзыв. То да се. И так далее и тому подобное. Никогда не забуду... Очень впечатлил...Вовек запомню... Этот урод еще попляшет на костре инквизиции за такую работу.
        Вот так вот"
        />
</LinearLayout>
</LinearLayout>
</layout>