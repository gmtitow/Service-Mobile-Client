<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@color/mainTheme">

    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_list_title_style"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:gravity="end"
            android:text="@string/task_name_title" />

        <TextView
            android:id="@+id/text_name"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_list_title_style"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:gravity="end"
            android:text="@string/task_category_title" />

        <TextView
            android:id="@+id/text_category"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_list_title_style"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:gravity="end"
            android:text="@string/task_status_title" />

        <TextView
            android:id="@+id/text_status"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        style="@style/layout_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_tender_date">

        <TextView
            style="@style/text_list_title_style"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:gravity="end"
            android:text="@string/tender_duration_title" />

        <TextView
            android:id="@+id/text_tender_duration"
            style="@style/text_list_style"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>